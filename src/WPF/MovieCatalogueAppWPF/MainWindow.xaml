<Window x:Class="MovieCatalogueAppWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieCatalogueAppWPF"
        xmlns:viewmodels="clr-namespace:MovieCatalogueAppWPF.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">


    <Window.Resources>
        <DataTemplate x:Name="startUpTemplate" DataType="{x:Type viewmodels:StartupViewModel}">
            <local:StartupView DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate x:Name="addMovieTemplate" DataType="{x:Type viewmodels:AddMovieViewModel}">
            <local:StartupView DataContext="{Binding}"/>
        </DataTemplate>

        <DataTemplate x:Name="deleteMovieTemplate" DataType="{x:Type viewmodels:DeleteMovieViewModel}">
            <local:StartupView DataContext="{Binding}"/>
        </DataTemplate>

        <DataTemplate x:Name="editMovieTemplate" DataType="{x:Type viewmodels:EditMovieViewModel}">
            <local:StartupView DataContext="{Binding}"/>
        </DataTemplate>

        <DataTemplate x:Name="listAllMoviesTemplate" DataType="{x:Type viewmodels:ListAllMoviesViewModel}">
            <local:StartupView DataContext="{Binding}"/>
        </DataTemplate>


        <Style TargetType="Button">
            <Setter Property="Height" Value="45px"></Setter>

            <Setter Property="Margin" Value="0,90,0,0"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>

            <Setter Property="Margin" Value="0,20,0,0"></Setter>
            <Setter Property="Background" Value="#353535"></Setter>
            <Setter Property="BorderThickness" Value="0"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>

        </Style>

    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DockPanel Background="#353535" Grid.Row="0" Grid.Column="0" Grid.RowSpan="5">
            <StackPanel>

                <Button Margin="0,40,0,0" Click="ButtonStartup">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Icons/icons8-home-50.png" Width="18"></Image>
                        <TextBlock Text="Home" FontSize="12pt" VerticalAlignment="Center"></TextBlock>
                    </StackPanel>
                </Button>
                <Button Content="Add Movie" FontSize="12pt" Click="ButtonAdd"></Button>
                <Button Content="Delete Movie" FontSize="12pt" Click="ButtonDelete"></Button>
                <Button Content="Edit Movie" FontSize="12pt" Click="ButtonEdit"></Button>
                <Button Content="List Movies" FontSize="12pt" Click="ButtonList"></Button>

            </StackPanel>
        </DockPanel>
        

        <ContentControl Content="{Binding}"  Grid.Row="0" Grid.Column="1" 
                        Grid.ColumnSpan="1" Grid.RowSpan="5">
        </ContentControl>
       
    </Grid>
</Window>
